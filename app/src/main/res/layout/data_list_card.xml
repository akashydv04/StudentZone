<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/data_card_property"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Property Name:"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/property_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="test property name"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/location_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Haryana"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Locality:"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/locality_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="HSR Test"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Owner Number:"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/owner_number_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+91 9876543210"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Owner Name:"
                android:paddingStart="15dp"
                android:layout_weight="1"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/owner_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chaudhary"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Preferred Language:"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/language_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="hindi"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Application Status:"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/application_status_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>